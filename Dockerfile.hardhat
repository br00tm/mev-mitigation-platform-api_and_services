FROM node:18-alpine

WORKDIR /app

# Install system dependencies
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY hardhat.config.ts ./

# Install dependencies
RUN npm ci

# Copy contracts and scripts
COPY src/infrastructure/blockchain/ ./src/infrastructure/blockchain/

# Compile contracts
RUN npm run compile

# Expose Hardhat node port
EXPOSE 8545

# Start Hardhat node
CMD ["npx", "hardhat", "node", "--hostname", "0.0.0.0"]




