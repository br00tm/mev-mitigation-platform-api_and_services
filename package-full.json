{
  "name": "mev-mitigation-platform-backend",
  "version": "1.0.0",
  "description": "Backend API e Services para MEV Mitigation Platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "compile": "hardhat compile",
    "test:contracts": "hardhat test",
    "deploy:local": "hardhat run src/infrastructure/blockchain/scripts/deploy.ts --network localhost",
    "deploy:sepolia": "hardhat run src/infrastructure/blockchain/scripts/deploy.ts --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia",
    "node": "hardhat node",
    "coverage:contracts": "hardhat coverage"
  },
  "keywords": ["mev", "blockchain", "ethereum", "defi", "api"],
  "author": "Pedro Brito",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^7.2.4",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^1.10.0",
    "@prisma/client": "^5.7.1",
    "ethers": "^6.8.1",
    "fastify": "^4.24.3",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4",
    "uuid": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.9.2",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "prisma": "^5.7.1",
    "tsx": "^4.4.0",
    "typescript": "^5.3.2",
    "hardhat": "^2.19.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0"
  },
  "optionalDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.5",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "chai": "^4.2.0",
    "typechain": "^8.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
